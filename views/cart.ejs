                      <div class="qty">
                        
                        <form action="/removeCart/<%= cartItem.product.id %>" method="post" >
                          <input type="text" value="<%= cartItem.quantity %>" />
                            <button type="submit"><i class="fa fa-trash"></i></button>
                        </form>
                     
