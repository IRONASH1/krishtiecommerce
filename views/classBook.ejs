                <input id='amount-value' name="price" value="<%= product.price %>" type='hidden' >
              </div>
            </div>
        <div class='students-birthday'>
          <label for='workshop'>Workshop Title</label>
          <input id='title' name="title" value="<%= product.title %>" type='text' disabled>
          <input id='title' name="title" value="<%= product.title %>" type='hidden'>
        </div>
        <div class='set'>
         
<!-- Display scheduledDateTimes array for Date and Time selection -->
<div class="students-date-time">
  <label>Select Date and Time:</label>
  <select id="selectedDateTime" name="scheduledDateTimes[]" required>
    <option value="" disabled selected hidden>Choose One</option>
    <% product.scheduledDateTimes.forEach(dateTime => { %>
      <option value="<%= new Date(dateTime).toISOString() %>">
        <%= new Date(dateTime).toLocaleString([], {
          year: 'numeric',
          month: 'numeric',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit',
          hour12: true,
        }) %>
      </option>
    <% }); %>
  </select>
</div>

