                <input id='email' name="email" value="<%= user.email %>" disabled type='text'>
                <input id='email' name="email" value="<%= user.email %>" type='hidden'>
              </div>
              <div class='students-birthday'>
                <label for='workshop'>Workshop Name</label>
                <input id='workshop' name="workshop" value="<%= product.workshop %>" type='text' disabled>
                <input id='workshop' name="workshop" value="<%= product.workshop %>" type='hidden'>
              </div>
            </div>
            <div class='set'>
              <div class='students-spayed-neutered'>
                <label for='moc'>Mode of Class</label>
                <input id='moc' name="moc" value="<%= product.moc %>" type='text' disabled>
                <input id='moc' name="moc" value="<%= product.moc %>" type='hidden' >
              </div>
              <div class='students-spayed-neutered'>
